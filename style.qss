QMainWindow {
    background-color: #f0f0f0; /* Light gray */
}

QPushButton {
    border: none;
    color: white;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 4px 2px;
    cursor: pointer;
    border-radius: 8px;
}

QPushButton:hover {
    background-color: #45a049; /* Darker green */
}

QPushButton:pressed {
    background-color: #367532; /* Slightly darker green */
}
